<%= simple_form_for(@event) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :date %>
    <%= f.input :tentative %>
    <%= f.input :tbd_info %>
    <%= f.input :location %>
    <%= f.input :distance %>
    <%= f.input :measure, collection: ["km", "mi"] %>
    <%= f.input :url %>
    <%= f.input :description %>
    <%= f.input :early_price %>
    <%= f.input :early_date %>
    <%= f.input :regular_price %>
    <%= f.input :regular_date %>
    <%= f.input :late_price %>
    <%= f.input :bonus %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
