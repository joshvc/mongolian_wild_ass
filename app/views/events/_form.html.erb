<%= simple_form_for(@event) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :description %>
    <%= f.input :early_price %>
    <%= f.input :early_date %>
    <%= f.input :date %>
    <%= f.input :regular_price %>
    <%= f.input :regular_date %>
    <%= f.input :late_price %>
    <%= f.input :tbd_info %>
    <%= f.input :distance %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
